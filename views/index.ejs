<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="todo-title">To-do list</h2>
        <div>
            <a class="btn" href="/add-todo">Add to-do</a>
        </div>
        <br />

        <table class="table">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Created</th>
                <th>Updated</th>
                <th style="width:130px">Task</th>
            </tr>
            <tr>
                <% for(let i=0; i < todos.length; i++) { %>
                    <td><%= todos[i].title %></td>
                    <td><%= todos[i].desc %></td>
                    <td><%= moment(todos[i].createdAt).format("hh:mm a, MMMM DD, YYYY") %></td>
                    <td><%= moment(todos[i].updatedAt).format("hh:mm a, MMMM DD, YYYY") %></td>
                    <td>
                    <a class="btn" href="/update-todo?id=<%= todos[i]._id %>">Edit</a>
                    <a class="btn" href="/delete-todo?id=<%= todos[i]._id %>">Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
    </div>
<%- include("partials/footer") %>